<button
  class="save-button bookmark-save-button hide-for-print {{if saved 'saved'}}"
  onclick={{action 'toggleSaved'}}
  data-test-bookmark-button-saved={{if saved 'true' 'false'}}
>
  {{fa-icon "bookmark"}}
  <span class="state">
    {{#if saved}}
      SAVED
    {{/if}}
  </span>
</button>

{{yield}}
