<NeedsAsync
  @needs={{this.taskInstance}} as |data-task|
>
  <data-task.loaded
    data-task-was-successful
    as |model|
  >
    {{yield model}}
  </data-task.loaded>
  <data-task.loading>
    <ContentPlaceholders as |placeholder|>
      <placeholder.text @lines={{1}} />
      {{placeholder.nav}}
      <placeholder.text @lines={{10}} />
    </ContentPlaceholders>
  </data-task.loading>
  <data-task.error as |error|>
    <CartoDataProvider::ErrorHandler
      data-test-error-handler
      @errors={{error.errors}}
    />
  </data-task.error>
</NeedsAsync>
