{{#needs-async
  needs=(query 'carto-geojson-feature'
    (hash
      q=this.cartoQuery
      format='geojson'
    )
  )
  as |data-task|
}}
  {{#data-task.loaded as |models|}}
    {{yield models.firstObject}}
  {{/data-task.loaded}}

  {{#data-task.loading}}
    {{#content-placeholders as |placeholder|}}
      {{placeholder.text lines=1}}
      {{placeholder.nav}}
      {{placeholder.text lines=10}}
    {{/content-placeholders}}
  {{/data-task.loading}}

  {{#data-task.error as |error|}}
    Oops. Something went wrong... <br/>
    <ul>
      {{#each error.errors as |error|}}
        <li>{{error}}</li>
      {{/each}}
    </ul>
    Please try again.
  {{/data-task.error}}
{{/needs-async}}
