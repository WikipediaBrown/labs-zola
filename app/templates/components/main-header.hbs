<LabsUi::SiteHeader
  @responsiveNav={{true}}
  class={{if this.printSvc.enabled "hide-for-print"}} as |banner|
>
  <banner.title>
    {{#link-to
      "index"
      (query-params print=false)
      data-test-link-to="index"
      classNames="site-title"
    }}
      ZoLa
      <small class="site-subtitle show-for-medium">
        {{#if (media "desktop")}}
          <span class="show-for-large">
            New
          </span>
          <span class="show-for-large">
            York
          </span>
          <span class="show-for-large">
            City's
          </span>
        {{/if}}
        {{#if (or (media "mobile") (media "tablet"))}}
          NYC's
        {{/if}}
        Zoning &amp; Land Use Map
      </small>
    {{/link-to}}
  </banner.title>
  <banner.nav>
    <ul class="menu vertical large-horizontal">
      <li>
        {{link-to "About" "about"}}
      </li>
      <li>
        {{link-to "Features" "features" classNames="features-header-link"}}
      </li>
      <li>
        {{link-to "Data" "data"}}
      </li>
      <li class="saved-bookmarks-counter">
        {{#link-to "bookmarks"}}
          {{fa-icon "bookmark"}}
          Saved
          {{#if bookmarks.length}}
            <span class="badge sup">
              {{bookmarks.length}}
            </span>
          {{/if}}
        {{/link-to}}
      </li>
      <AnnouncementBox />
    </ul>
  </banner.nav>
</LabsUi::SiteHeader>
