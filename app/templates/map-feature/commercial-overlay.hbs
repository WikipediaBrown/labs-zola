<CartoDataProvider
  @modelId={{model.id}}
  @modelName="commercial-overlay" as |commercialOverlay|
>
  <Mapbox::MapFeatureRenderer
    @model={{commercialOverlay}}
    @shouldFitBounds={{model.search}}
  />
  <BookmarkButton @bookmarkableModel={{commercialOverlay}} />
  <LayerRecordViews::CommercialOverlay @model={{commercialOverlay.properties}}>
    <Mapbox::FitMapToAllButton @model={{commercialOverlay}}>
      Fit map to all
      {{commercialOverlay.id}}
      districts
    </Mapbox::FitMapToAllButton>
  </LayerRecordViews::CommercialOverlay>
</CartoDataProvider>