{{#carto-data-provider
  modelId=model.id
  modelName='zoning-district'
  as |cartoFeature|
}}
  {{mapbox/map-feature-renderer
    model=cartoFeature
    shouldFitBounds=model.search
  }}

  {{bookmark-button
    bookmarkableModel=cartoFeature}}

  {{layer-record-views/zoning-district
    model=cartoFeature.properties
  }}

  {{#mapbox/fit-map-to-all-button model=cartoFeature}}
    Fit map to all {{cartoFeature.id}} districts
  {{/mapbox/fit-map-to-all-button}}
{{/carto-data-provider}}
