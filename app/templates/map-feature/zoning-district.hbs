<CartoDataProvider
  @modelId={{model.id}}
  @modelName="zoning-district" as |cartoFeature|
>
  <Mapbox::MapFeatureRenderer
    @model={{cartoFeature}}
    @shouldFitBounds={{model.search}}
  />
  <BookmarkButton @bookmarkableModel={{cartoFeature}} />
  <LayerRecordViews::ZoningDistrict @model={{cartoFeature.properties}} />
  <Mapbox::FitMapToAllButton @model={{cartoFeature}}>
    Fit map to all
    {{cartoFeature.id}}
    districts
  </Mapbox::FitMapToAllButton>
</CartoDataProvider>